<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attrs="http://schemas.android.com/apk/res/com.android.calculator2"
    android:id="@+id/simplePad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:gravity="top"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0px" >

        <com.android.calculator2.ColorButton
            android:id="@+id/digit7"
            style="@style/white_small_button_style"
            android:text="@string/digit7"
            android:textColor="@color/digit_button_text" />
            android:layout_marginTop="0dp"

        <com.android.calculator2.ColorButton
            android:id="@+id/digit8"
            style="@style/white_small_button_style"
            android:text="@string/digit8"
            android:textColor="@color/digit_button_text" />
            android:layout_marginTop="0dp"

        <com.android.calculator2.ColorButton
            android:id="@+id/digit9"
            style="@style/white_small_button_style"
            android:text="@string/digit9"
            android:textColor="@color/digit_button_text" />
            android:layout_marginTop="0dp"

        <com.android.calculator2.ColorButton
            android:id="@+id/div"
            style="@style/blue_small_button_style"
            android:text="@string/div" 
            android:textColor="@color/simple_symbol_button_text"/>
            android:layout_marginTop="0dp"
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.android.calculator2.ColorButton
            android:id="@+id/digit4"
            style="@style/white_small_button_style"
            android:text="@string/digit4"
            android:textColor="@color/digit_button_text" />

        <com.android.calculator2.ColorButton
            android:id="@+id/digit5"
            style="@style/white_small_button_style"
            android:text="@string/digit5"
            android:textColor="@color/digit_button_text" />

        <com.android.calculator2.ColorButton
            android:id="@+id/digit6"
            style="@style/white_small_button_style"
            android:text="@string/digit6"
            android:textColor="@color/digit_button_text" />

        <com.android.calculator2.ColorButton
            android:id="@+id/mul"
            style="@style/blue_small_button_style"
            android:text="@string/mul" 
            android:textColor="@color/simple_symbol_button_text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.android.calculator2.ColorButton
            android:id="@+id/digit1"
            style="@style/white_small_button_style"
            android:text="@string/digit1"
            android:textColor="@color/digit_button_text" />

        <com.android.calculator2.ColorButton
            android:id="@+id/digit2"
            style="@style/white_small_button_style"
            android:text="@string/digit2"
            android:textColor="@color/digit_button_text" />

        <com.android.calculator2.ColorButton
            android:id="@+id/digit3"
            style="@style/white_small_button_style"
            android:text="@string/digit3"
            android:textColor="@color/digit_button_text" />

        <com.android.calculator2.ColorButton
            android:id="@+id/minus"
            style="@style/blue_small_button_style"
            android:text="@string/minus" 
            android:textColor="@color/simple_symbol_button_text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.android.calculator2.ColorButton
            android:id="@+id/dot"
            style="@style/white_small_button_style"
            android:text="@string/dot"
            android:textColor="@color/digit_button_text" />

        <com.android.calculator2.ColorButton
            android:id="@+id/digit0"
            style="@style/white_small_button_style"
            android:text="@string/digit0"
            android:textColor="@color/digit_button_text" />

        <com.android.calculator2.ColorButton
            android:id="@+id/equal"
            style="@style/blue_small_button_style"
            android:text="@string/equal" 
            android:textColor="@color/simple_symbol_button_text"/>

        <com.android.calculator2.ColorButton
            android:id="@+id/plus"
            style="@style/blue_small_button_style"
            android:text="@string/plus" 
            android:textColor="@color/simple_symbol_button_text"/>
    </LinearLayout>

</LinearLayout>