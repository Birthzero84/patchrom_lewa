<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attrs="http://schemas.android.com/apk/res/com.android.calculator2"
    android:id="@+id/advancedPad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/land_advanced_pad_padding_left" >
    android:layout_gravity="bottom"
    android:gravity="bottom"

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.android.calculator2.ColorButton
            android:id="@+id/sin"
            style="@style/land_advanced_button_style"
            android:text="@string/sin" 
            android:textColor="@color/advanced_button_text"/>
            android:layout_marginTop="0dp"
            android:textSize="@dimen/land_advanced_pad_long_symbol_textsize"

        <com.android.calculator2.ColorButton
            android:id="@+id/cos"
            style="@style/land_advanced_button_style"
            android:text="@string/cos" 
            android:textColor="@color/advanced_button_text"/>
            android:layout_marginTop="0dp"
            android:textSize="@dimen/land_advanced_pad_long_symbol_textsize"

        <com.android.calculator2.ColorButton
            android:id="@+id/tan"
            style="@style/land_advanced_button_style"
            android:text="@string/tan"
            android:textColor="@color/advanced_button_text"/>
            android:layout_marginTop="0dp"
            android:textSize="@dimen/land_advanced_pad_long_symbol_textsize" 
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.android.calculator2.ColorButton
            android:id="@+id/ln"
            style="@style/land_advanced_button_style"
            android:text="@string/ln"
            android:textColor="@color/advanced_button_text" />
            android:textSize="@dimen/land_advanced_pad_long_symbol_textsize"

        <com.android.calculator2.ColorButton
            android:id="@+id/lg"
            style="@style/land_advanced_button_style"
            android:text="@string/lg"
            android:textColor="@color/advanced_button_text" />
            android:textSize="@dimen/land_advanced_pad_long_symbol_textsize"

        <com.android.calculator2.ColorButton
            android:id="@+id/factorial"
            style="@style/land_advanced_button_style"
            android:text="@string/factorial"
            android:textColor="@color/advanced_button_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <com.android.calculator2.ColorButton
            android:id="@+id/pi"
            style="@style/land_advanced_button_style"
            android:text="@string/pi"
            attrs:src="@drawable/pi_land"/>

        <com.android.calculator2.ColorButton
            android:id="@+id/e"
            style="@style/land_advanced_button_style"
            android:text="@string/e"
            attrs:src="@drawable/e_land"/>

        <com.android.calculator2.ColorButton
            android:id="@+id/power"
            style="@style/land_advanced_button_style"
            android:text="@string/power"
            attrs:src="@drawable/power"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.android.calculator2.ColorButton
            android:id="@+id/leftParen"
            style="@style/land_advanced_button_style"
            android:text="@string/leftParen"
            android:textColor="@color/advanced_button_text" />

        <com.android.calculator2.ColorButton
            android:id="@+id/rightParen"
            style="@style/land_advanced_button_style"
            android:text="@string/rightParen"
            android:textColor="@color/advanced_button_text" />

        <com.android.calculator2.ColorButton
            android:id="@+id/sqrt"
            style="@style/land_advanced_button_style"
            android:text="@string/sqrt"
            attrs:src="@drawable/sqrt_land" />
    </LinearLayout>

</LinearLayout>