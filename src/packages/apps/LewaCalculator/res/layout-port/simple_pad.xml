<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attrs="http://schemas.android.com/apk/res/com.android.calculator2"
              android:id="@+id/simplePad"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="top|center_horizontal"
              android:paddingLeft="@dimen/port_control_bt_margin_left"
              >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.android.calculator2.ColorButton
            android:id="@+id/digit7"
            android:text="@string/digit7"
            style="@style/white_medium_button_style"
            android:textColor="@color/digit_button_text"
            />
        <com.android.calculator2.ColorButton
            android:id="@+id/digit8"
            android:text="@string/digit8"
            style="@style/white_medium_button_style"
            android:textColor="@color/digit_button_text"
            />
        <com.android.calculator2.ColorButton
            android:id="@+id/digit9"
            android:text="@string/digit9"
            style="@style/white_medium_button_style"
            android:textColor="@color/digit_button_text"
            />
        <com.android.calculator2.ColorButton
            android:id="@+id/div"
            android:text="@string/div"
            style="@style/blue_medium_button_style"
            android:textColor="@color/simple_symbol_button_text"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.android.calculator2.ColorButton
            android:id="@+id/digit4"
            android:text="@string/digit4"
            style="@style/white_medium_button_style"
            android:textColor="@color/digit_button_text"
            />
        <com.android.calculator2.ColorButton
            android:id="@+id/digit5"
            android:text="@string/digit5"
            style="@style/white_medium_button_style"
            android:textColor="@color/digit_button_text"
            />
        <com.android.calculator2.ColorButton
            android:id="@+id/digit6"
            android:text="@string/digit6"
            style="@style/white_medium_button_style"
            android:textColor="@color/digit_button_text"
            />
        <com.android.calculator2.ColorButton
            android:id="@+id/mul"
            android:text="@string/mul"
            android:textColor="@color/simple_symbol_button_text"
            style="@style/blue_medium_button_style"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.android.calculator2.ColorButton
            android:id="@+id/digit1"
            android:text="@string/digit1"
            style="@style/white_medium_button_style"
            android:textColor="@color/digit_button_text"
            />
        <com.android.calculator2.ColorButton
            android:id="@+id/digit2"
            android:text="@string/digit2"
            style="@style/white_medium_button_style"
            android:textColor="@color/digit_button_text"
            />
        <com.android.calculator2.ColorButton
            android:id="@+id/digit3"
            android:text="@string/digit3"
            style="@style/white_medium_button_style"
            android:textColor="@color/digit_button_text"
            />
        <com.android.calculator2.ColorButton
            android:id="@+id/minus"
            android:text="@string/minus"
            android:textColor="@color/simple_symbol_button_text"
            style="@style/blue_medium_button_style"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.android.calculator2.ColorButton
            android:id="@+id/dot"
            android:text="@string/dot"
            style="@style/white_medium_button_style"
            android:textColor="@color/digit_button_text"
            />
        <com.android.calculator2.ColorButton
            android:id="@+id/digit0"
            android:text="@string/digit0"
            style="@style/white_medium_button_style"
            android:textColor="@color/digit_button_text"
            />
        <com.android.calculator2.ColorButton
            android:id="@+id/equal"
            android:text="@string/equal"
            android:textColor="@color/simple_symbol_button_text"
            style="@style/blue_medium_button_style"
            />
        <com.android.calculator2.ColorButton
            android:id="@+id/plus"
            android:text="@string/plus"
            android:textColor="@color/simple_symbol_button_text"
            style="@style/blue_medium_button_style"
            />
    </LinearLayout>
</LinearLayout>
