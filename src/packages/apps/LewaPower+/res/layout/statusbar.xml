<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/int_status"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		>
		
		<ImageView
            android:id="@+id/int_status_icon"
			android:src="@drawable/spm_notification_pic"
			android:layout_width="@android:dimen/notification_large_icon_width"
			android:layout_height="@android:dimen/notification_large_icon_width"
			android:layout_centerVertical="true" 
			android:scaleType="center"
			android:background="@lewa:drawable/android_notify_panel_notification_icon_bg"
			
			/>
		
		<LinearLayout
            android:id="@+id/int_status_info"
            android:layout_toRightOf="@+id/int_status_icon"
            android:layout_toLeftOf="@+id/int_status_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="8dip"
            android:orientation="vertical" >
                <TextView
                    android:id="@+id/int_status_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="17dip"
                    android:textColor="@lewa:color/android_background_holo_dark">
                </TextView>
                <TextView
                    android:id="@+id/int_status_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="13dip" 
                    android:textColor="@lewa:color/android_background_holo_dark">
                </TextView>
            
        </LinearLayout>
       <Button
            android:id="@+id/int_status_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@lewa:color/android_background_holo_dark"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="13dip"
            android:text="@string/spm_inti_statusbar_exit">
        </Button>	
</RelativeLayout>