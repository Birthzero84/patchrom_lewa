<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
>
    <TextView android:id="@+id/words_hint"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_marginRight="15dip"
        android:layout_marginLeft="15dip"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"
        android:gravity="right"
        android:visibility="gone"
        android:textColor="?android:attr/textColorPrimary"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="220dip"
        >
	    <EditText 
	        android:id="@+id/share_content"
	        android:layout_width="fill_parent"
	        android:layout_marginLeft="15dip"
	        android:layout_marginRight="15dip" 
	        android:layout_marginTop="5dip"
	        android:background="@drawable/share_editarea_bg"
	        android:textColor="?android:attr/textColorPrimary"
	        android:singleLine="false"
	        android:gravity="top"
	        android:editable="false"
	        android:layout_weight="1"
	        android:layout_height="200dip">
	    </EditText>
    </LinearLayout>
    
    <TextView android:id="@+id/not_install_sinaweibo"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_marginRight="15dip"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="10dip"
        android:text="@string/no_share_app_find"
        android:gravity="left"
        android:textColor="?android:attr/textColorPrimary"
        android:visibility="gone"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >   
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center_horizontal"
	        >
	
	        <Button
	            android:id="@+id/btn_share_sina"
	            android:layout_width="200dip"
	            android:layout_height="56dip"
	            android:background="@drawable/btn_selector"
	            android:shadowColor="#7e4b4b4b"
	            android:shadowDx="1"
	            android:shadowDy="1"
	            android:shadowRadius="1"
	            android:layout_gravity="center_horizontal"
	            android:text="@string/share_to_sina_weibo"
	            android:textColor="#ffffff"
	            android:textSize="16sp"
	            android:visibility="visible" />
		    
	        <Button
	            android:id="@+id/btn_download_sinaWeibo"
	            android:layout_width="200dip"
	            android:layout_height="56dip"
	            android:background="@drawable/btn_selector"
	            android:shadowColor="#7e4b4b4b"
	            android:shadowDx="1"
	            android:shadowDy="1"
	            android:shadowRadius="1"
	            android:layout_gravity="center_horizontal"
	            android:text="@string/download_sina_weibo"
	            android:textColor="#ffffff"
	            android:textSize="16sp" 
	            android:visibility="gone" />
	        
	    </LinearLayout>
	    <!-- tencent -->
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center_horizontal"
	        >
	
	        <Button
	            android:id="@+id/btn_share_tencent"
	            android:layout_width="200dip"
	            android:layout_height="56dip"
	            android:background="@drawable/btn_selector"
	            android:shadowColor="#7e4b4b4b"
	            android:shadowDx="1"
	            android:shadowDy="1"
	            android:shadowRadius="1"
	            android:layout_gravity="center_horizontal"
	            android:text="@string/share_to_tencent_weibo"
	            android:textColor="#ffffff"
	            android:textSize="16sp"
	            android:visibility="visible" />
	        
	        <Button
	            android:id="@+id/btn_download_tencent"
	            android:layout_width="200dip"
	            android:layout_height="56dip"
	            android:background="@drawable/btn_selector"
	            android:shadowColor="#7e4b4b4b"
	            android:shadowDx="1"
	            android:shadowDy="1"
	            android:shadowRadius="1"
	            android:layout_gravity="center_horizontal"
	            android:text="@string/download_tencent_weibo"
	            android:textColor="#ffffff"
	            android:textSize="16sp" 
	            android:visibility="gone" />
	        
	    </LinearLayout>
	    <!-- renren -->
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center_horizontal"
	        >
	
	        <Button
	            android:id="@+id/btn_share_renren"
	            android:layout_width="200dip"
	            android:layout_height="56dip"
	            android:background="@drawable/btn_selector"
	            android:shadowColor="#7e4b4b4b"
	            android:shadowDx="1"
	            android:shadowDy="1"
	            android:shadowRadius="1"
	            android:layout_gravity="center_horizontal"
	            android:text="@string/share_to_renren"
	            android:textColor="#ffffff"
	            android:textSize="16sp"
	            android:visibility="visible" />
	        
	        <Button
	            android:id="@+id/btn_download_renren"
	            android:layout_width="200dip"
	            android:layout_height="56dip"
	            android:background="@drawable/btn_selector"
	            android:shadowColor="#7e4b4b4b"
	            android:shadowDx="1"
	            android:shadowDy="1"
	            android:shadowRadius="1"
	            android:layout_gravity="center_horizontal"
	            android:text="@string/download_renren"
	            android:textColor="#ffffff"
	            android:textSize="16sp" 
	            android:visibility="gone" />
	        
	    </LinearLayout>
	    <!-- Qzone -->
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            >
    
            <Button
                android:id="@+id/btn_share_qzone"
                android:layout_width="200dip"
                android:layout_height="56dip"
                android:background="@drawable/btn_selector"
                android:shadowColor="#7e4b4b4b"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:layout_gravity="center_horizontal"
                android:text="@string/share_to_qzone"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:visibility="visible" />
            
            <Button
                android:id="@+id/btn_download_qzone"
                android:layout_width="200dip"
                android:layout_height="56dip"
                android:background="@drawable/btn_selector"
                android:shadowColor="#7e4b4b4b"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:layout_gravity="center_horizontal"
                android:text="@string/download_qzone"
                android:textColor="#ffffff"
                android:textSize="16sp" 
                android:visibility="gone" />
            
        </LinearLayout>
	 </LinearLayout>      
</LinearLayout>