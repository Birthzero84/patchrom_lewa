    <Button
            android:id="@+id/tv_download_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/msg_cannot_ota_update"
            android:text="@string/download_progress"
            android:layout_marginTop="340dip"
            android:layout_gravity="center_horizontal"
            android:clickable="false"
            android:textSize="21sp"
            android:textColor="@drawable/percent_color"
            android:visibility="gone"
            android:shadowColor="#ff202b18"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            />
    <!-- add by zenghuaying -->
    <LinearLayout
            android:id="@+id/notes_operate"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="horizontal"
            >
        
         <LinearLayout
               android:id="@+id/layout_download_progress"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:minHeight="48dip"
               android:orientation="vertical"
               android:divider="?android:attr/dividerHorizontal"
               android:layout_alignParentBottom="true"
               android:showDividers="beginning"
               android:dividerPadding="0dip"
               android:background="#00ffffff"
               android:visibility="gone">
               <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="48dip"
                     android:gravity="center_vertical"
                     android:orientation="horizontal"
                     android:background="@drawable/ota_bottom_btn_bkg"
                     style="?android:attr/buttonBarStyle">
        
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="48dip"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">
        
                    <Button
                            android:id="@+id/cancel_download"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5.0dip"
                            android:layout_marginRight="5.0dip"
                            android:layout_alignParentLeft="true"
                            android:layout_marginBottom="3.0dip"
                            android:text="@string/btn_cancel"
                            android:textColor="?android:attr/textColorPrimary"/>
                    
                    <ProgressBar
                            android:id="@+id/download_progress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="202dip"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/cancel_download"
                            android:layout_marginLeft="5.0dip"
                            android:layout_marginTop="8dip"
                            android:max="100"/>
        
                    <TextView
                            android:id="@+id/progress_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/download_progress"
                            android:layout_marginTop="16dip"
                            android:layout_marginRight="2.0dip"
                            android:text="@string/buffering"/>
        
                    <TextView
                            android:id="@+id/progress_persent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dip"
                            android:layout_marginLeft="2.0dip"
                            android:layout_toRightOf="@id/progress_size"/>
        
                    <Button
                            android:id="@+id/pause_download"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="5.0dip"
                            android:layout_marginBottom="3.0dip"
                            android:layout_toRightOf="@id/download_progress"
                            android:text="@string/btn_pause"
                            android:textColor="?android:attr/textColorPrimary"/>
                    <Button
                            android:id="@+id/continue_download"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="5.0dip"
                            android:layout_marginBottom="3.0dip"
                            android:layout_toRightOf="@id/download_progress"
                            android:text="@string/btn_continue"
                            android:textColor="?android:attr/textColorPrimary"
                            android:visibility="gone"
                            />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        
             
        <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:minHeight="48dip"
               android:orientation="vertical"
               android:divider="?android:attr/dividerHorizontal"
               android:layout_alignParentBottom="true"
               android:showDividers="beginning"
               android:dividerPadding="0dip"
               android:visibility="gone">
               <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:gravity="center_vertical"
                     android:orientation="horizontal"
                     style="?android:attr/buttonBarStyle">
                <Button 
                       android:id="@+id/btn_install"
                      android:layout_width="0dip"
                      android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMediumInverse"
                      android:layout_weight="1"
                      android:shadowDx="1.0"
                      android:shadowDy="-1.2"
                      android:shadowRadius="1.0"
                      android:text="@string/download_now"
                      style="?android:attr/buttonBarButtonStyle"/>
             </LinearLayout>      
       </LinearLayout>    
    </LinearLayout>
    <!-- add end -->
</FrameLayout>