<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ota_info_background_height"
        android:background="@drawable/ota_background_shape">
        <FrameLayout 
            android:layout_width="fill_parent"
            android:layout_height="@dimen/ota_info_background_height">
            
            <ImageView 
                android:id="@+id/arrow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dip"
                android:layout_marginLeft="10dip"
                android:visibility="gone"
                android:src="@drawable/new_version_arrow"/>
            <ImageView 
                android:id="@+id/arrow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dip"
                android:layout_marginLeft="75dip"
                android:visibility="gone"
                android:src="@drawable/new_version_arrow"/>
             <ImageView 
                android:id="@+id/arrow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dip"
                android:layout_marginLeft="140dip"
                android:visibility="gone"
                android:src="@drawable/new_version_arrow"/>
              <ImageView 
                android:id="@+id/arrow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dip"
                android:layout_marginLeft="205dip"
                android:visibility="gone"
                android:src="@drawable/new_version_arrow"/>
               <ImageView 
                android:id="@+id/arrow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dip"
                android:layout_marginLeft="275dip"
                android:visibility="gone"
                android:src="@drawable/new_version_arrow"/>
               <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ota_info_bkg"/>
        </FrameLayout>
    </LinearLayout>
    
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ota_info_background_height"
            android:background="?android:attr/listChoiceBackgroundIndicator"
            android:layout_weight="1"
            >
        <RelativeLayout
                android:id="@+id/upRelativeLayout"
                android:layout_width="fill_parent"
                android:layout_height="88dip"
                android:layout_gravity="bottom"
                >
              <LinearLayout
                  android:id="@+id/topLayout"
                  android:layout_width="fill_parent"
                  android:layout_height="48dip"
                  android:layout_below="@+id/version_msg_view"
                  android:layout_marginLeft="8dip"
                  android:layout_marginRight="8dip"
                  android:background="@lewa:drawable/android_list_selector_holo_light"
                  android:orientation="horizontal">
                  <ImageView 
                      android:id="@+id/version_flag"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingLeft="4dip"
                      android:layout_marginTop="9dip"
                      android:src="@drawable/current_version_flag_pic"/>
                  
                  <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/version_msg_view"
                        android:textSize="14sp"
                        android:paddingLeft="4dip"
                        android:layout_marginTop="14dip"
                        android:textColor="?android:attr/textColorPrimary"
                        />
              </LinearLayout>
              
             <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#d5d1ca" 
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_alignParentBottom="true"/>
             
            <FrameLayout
                android:id="@+id/version_msg_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false">
                <TextView
                    android:id="@+id/version_msg"
                    style="@lewa:style/Widget.Holo.Light.TextView.ListSeparator"
                    android:text="@string/current_version"/>
            </FrameLayout>
            
        </RelativeLayout>
    </LinearLayout>

    <TextView android:id="@+id/msg_cannot_ota_update"
              android:layout_width="fill_parent"
              android:layout_height="70dip"
              android:layout_centerHorizontal="true"
              android:layout_marginLeft="16dip"
              android:layout_marginTop="295dip"
              android:layout_marginRight="16dip"
              android:text="@string/msg_cannot_ota_update"
              android:textSize="14sp"
              android:visibility="gone"
              android:layout_gravity="center_horizontal"
              android:gravity="center"
              android:textColor="?android:attr/textColorPrimary"
            />
    <!-- add by zenghuaying -->
    <LinearLayout 
        android:id="@+id/middle_btn_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dip"
        android:layout_gravity="center_horizontal">
           <Button 
               android:id="@+id/btn_share"
               android:layout_width="200dip"
               android:layout_height="56dip"
               android:background="@drawable/btn_selector"
               android:text="@string/share"
               android:layout_below="@id/msg_cannot_ota_update"
               android:layout_gravity="center_horizontal"
               android:visibility="visible"
               android:textSize="16sp"
               android:textColor="#ffffff"
               android:shadowColor="#7e4b4b4b"
               android:shadowDx="1"
               android:shadowDy="1"
               android:shadowRadius="1"/>
           
           <Button 
               android:id="@+id/btn_download_ota"
               android:layout_width="200dip"
               android:layout_height="56dip"
               android:background="@drawable/btn_selector"
               android:text="@string/download_ota"
               android:layout_below="@id/msg_cannot_ota_update"
               android:layout_gravity="center_horizontal"
               android:visibility="gone"
               android:textSize="16sp"
               android:textColor="#ffffff"
               android:shadowColor="#7e4b4b4b"
               android:shadowDx="1"
               android:shadowDy="1"
               android:shadowRadius="1"/>
           
           <Button 
               android:id="@+id/btn_download_full"
               android:layout_width="200dip"
               android:layout_height="56dip"
               android:background="@drawable/btn_selector"
               android:text="@string/download_full_package"
               android:layout_below="@id/msg_cannot_ota_update"
               android:layout_gravity="center_horizontal"
               android:visibility="gone"
               android:textSize="16sp"
               android:textColor="#ffffff"
               android:shadowColor="#7e4b4b4b"
               android:shadowDx="1"
               android:shadowDy="1"
               android:shadowRadius="1"/>
           
           <Button 
               android:id="@+id/btn_reboot"
               android:layout_width="200dip"
               android:layout_height="56dip"
               android:background="@drawable/btn_selector"
               android:text="@string/reboot_update"
               android:layout_below="@id/msg_cannot_ota_update"
               android:layout_gravity="center_horizontal"
               android:visibility="gone"
               android:textSize="16sp"
               android:textColor="#ffffff"
               android:shadowColor="#7e4b4b4b"
               android:shadowDx="1"
               android:shadowDy="1"
               android:shadowRadius="1"/>
    </LinearLayout>
