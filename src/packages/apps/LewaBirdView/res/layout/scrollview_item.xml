<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/scrollview_width"
    android:layout_height="@dimen/scrollview_item_width" 
      >

    <RelativeLayout
        android:id="@+id/app_info"
         android:layout_width="@dimen/scrollview_item_width"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="@dimen/scrollview_item_icon_width"
            android:layout_height="@dimen/scrollview_item_icon_width"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/scrollview_item_icon_paddingtop"
            android:scaleType="fitXY"
             />

        <TextView
            android:id="@+id/app_name"
            android:layout_below="@+id/app_icon"
            android:paddingTop="1dip"
            style="@style/BirdViewIcon" />


        <ImageView
            android:id="@+id/app_lock"
            android:layout_width="@dimen/scrollview_item_lock_width"
            android:layout_height="@dimen/scrollview_item_lock_width"
            android:layout_marginTop="18dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="3dip"
            android:background="@drawable/bv_clean_lock" 
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/app_online"
            android:layout_width="@dimen/scrollview_item_lock_width"
            android:layout_height="@dimen/scrollview_item_lock_width"
            android:layout_marginTop="5dip"
            android:layout_alignParentRight="true"
              android:layout_alignParentTop="true"
            android:layout_marginRight="3dip"
            android:visibility="invisible"
            android:background="@drawable/bv_clean_online" />
    </RelativeLayout>

      <ImageView
            android:id="@+id/app_line"
            android:layout_width="@dimen/scrollview_item_width"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bv_line" />
    
</RelativeLayout>