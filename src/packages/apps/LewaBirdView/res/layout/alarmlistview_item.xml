<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/alarmlistview_item_paddingbottom"
    android:paddingTop="@dimen/alarmlistview_item_paddingtop" >

    <TextView
        android:id="@+id/off"
        android:layout_width="40dip"
        android:layout_height="30dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/widget_bg"
        android:gravity="center"
        android:text="@string/on"
        android:textColor="#707070"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/time_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="21dip"
        android:layout_toLeftOf="@id/off"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/time_drawable"
        android:layout_width="2dip"
        android:layout_height="11dip"
        android:layout_alignTop="@id/time_m"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:layout_marginTop="@dimen/time_drawable_margintop"
        android:layout_toLeftOf="@id/time_m"
        android:background="@drawable/alarm_dian" />

    <TextView
        android:id="@+id/time_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/time_m"
        android:layout_toLeftOf="@id/time_drawable"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_m"
        android:layout_marginRight="26dip"
        android:layout_toLeftOf="@id/off"
        android:drawableLeft="@drawable/bv_tool_bell"
        android:drawablePadding="2dip"
        android:gravity="center"
        android:text="@string/used"
        android:textColor="@color/white"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:maxEms="5"
        android:textSize="12dp" />

</RelativeLayout>