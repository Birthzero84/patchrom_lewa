<com.android.deskclock.timer.Timer xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/timer_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/timer_progress_margin_top"
        android:src="@drawable/timer_progress_100" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:orientation="horizontal" >

        <include
            android:id="@+id/timer_time1"
            layout="@layout/digital_time" />

        <TextView
            android:id="@+id/time1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/timer_minute"
            android:textSize="8pt"
            android:layout_marginLeft="@dimen/timer_time_margin_left"
            android:layout_marginRight="@dimen/timer_time_margin_right"
            android:layout_marginBottom="@dimen/timer_time_text_margin_bottom"
            android:textColor="@color/black" />

        <include
            android:id="@+id/timer_time2"
            layout="@layout/digital_time" />

        <TextView
            android:layout_marginLeft="@dimen/timer_time_margin_left"
            android:id="@+id/time2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/timer_second"
            android:textSize="8pt"
            android:layout_marginBottom="@dimen/timer_time_text_margin_bottom"
            android:textColor="@color/black" />
    </LinearLayout>

</com.android.deskclock.timer.Timer>