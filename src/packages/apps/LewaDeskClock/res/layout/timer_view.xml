<com.android.deskclock.TimerView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <include
        android:id="@+id/stopwatch_minute"
        layout="@layout/digital_time" />

    <ImageView
        android:id="@+id/time_colon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/stopwatch_time_colon_margin_large"
        android:layout_marginRight="@dimen/stopwatch_time_colon_margin_large"
        android:src="@drawable/time_small_colon_init" />

    <include
        android:id="@+id/stopwatch_second"
        layout="@layout/digital_time" />

    <ImageView
        android:id="@+id/time_colon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/stopwatch_time_colon_margin_large"
        android:layout_marginRight="@dimen/stopwatch_time_colon_margin_large"
        android:src="@drawable/time_small_colon_init" />

    <include
        android:id="@+id/stopwatch_microseconds"
        layout="@layout/digital_time" />

</com.android.deskclock.TimerView>