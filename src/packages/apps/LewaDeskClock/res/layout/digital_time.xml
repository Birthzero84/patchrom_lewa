<?xml version="1.0" encoding="utf-8"?>
<com.android.deskclock.DigitalTime xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/stopwatch_time_margin_top_bottom"
        android:layout_marginTop="@dimen/stopwatch_time_margin_top_bottom"
        android:src="@drawable/time_small_init" />

    <ImageView
        android:id="@+id/time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/stopwatch_time_margin_top_bottom"
        android:layout_marginLeft="7dip"
        android:layout_marginTop="@dimen/stopwatch_time_margin_top_bottom"
        android:src="@drawable/time_small_init" />

</com.android.deskclock.DigitalTime>