<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flashlight_background" >
    <SurfaceView android:id="@+id/main_surfaceview"
        android:layout_width="1.0px"
        android:layout_height="1.0px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />
    <TextView
        android:id="@+id/prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceSmall"
         android:layout_marginTop="10dip"
        android:text="@string/prompt"/>

    <ImageView
        android:id="@+id/off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/off_paddingTop"
        android:src="@drawable/on_off" />

    <ImageView
        android:id="@+id/on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/on_paddingTop"
        android:src="@drawable/on_off" />


    <ImageView
        android:id="@+id/sos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/sos_paddingRight"
        android:layout_marginRight="@dimen/sos_paddingBottom"
        android:src="@drawable/sos_off" />

</RelativeLayout>
