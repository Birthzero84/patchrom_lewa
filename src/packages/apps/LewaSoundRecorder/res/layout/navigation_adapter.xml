<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/file_list_height" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/file_create_time_margin_left"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <!-- android:paddingBottom="@dimen/file_create_time_padding_buttom"  -->

        <TextView
            android:id="@+id/file_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/file_create_time_text_size" 
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/file_create_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/file_create_date_margin_top"
            android:textSize="@dimen/file_create_date_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/file_create_time_margin_left"
        android:gravity="center_vertical|right"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/playing_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/playing_iv_margin_right"/>
        
        <TextView 
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/duration_text_size"/>
    </LinearLayout>

</RelativeLayout>