        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Text.Medium" parent="@android:style/TextAppearance.Medium">
    </style>
    
   	<style name="Text.Small" parent="@android:style/TextAppearance.Small">
    </style>
    
    <style name="Text.Score" parent="@android:style/TextAppearance.Large">
       <item name="android:textSize">@dimen/score_size</item>
