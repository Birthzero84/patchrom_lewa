<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
  android:layout_height="wrap_content"
    android:background="@drawable/log_item_bg" >
    
    <ImageView
        android:id="@+id/item_back"
        android:layout_width="fill_parent"
        android:layout_height="159px"
        android:background="@drawable/log_item_bg" />
    <TextView 
        android:id="@+id/scan_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="7dip"
        android:paddingLeft="40dip"
        android:textSize="13sp"
        android:textColor="?android:attr/textColorSecondary" />
    
    <TextView 
        android:id="@+id/virus_counts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/scan_date"
        android:paddingLeft="40dip"
        android:paddingTop="5dip"
        android:textSize="12sp"
        android:textColor="?android:attr/textColorSecondary" />

    <TextView 
        android:id="@+id/caution_counts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scan_date"
        android:layout_toRightOf="@id/virus_counts"
        android:paddingLeft="30dip"
        android:textSize="12sp"
        android:paddingTop="5dip"
        android:textColor="?android:attr/textColorSecondary" />
        
    <TextView 
        android:id="@+id/clear_counts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/caution_counts"
        android:layout_marginTop="5dip"
        android:textSize="12sp"
        android:textColor="?android:attr/textColorSecondary"
        android:paddingLeft="40dip" />
        
    <TextView 
        android:id="@+id/unhandle_counts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/caution_counts"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@id/clear_counts"
        android:textSize="12sp"
        android:paddingLeft="30dip"
        android:textColor="?android:attr/textColorSecondary" />
</RelativeLayout>
