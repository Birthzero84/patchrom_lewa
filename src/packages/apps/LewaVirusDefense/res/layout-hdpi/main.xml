<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/scan_back"
        android:layout_width="fill_parent"
        android:layout_height="380px"
        android:background="@drawable/scan_shape" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="19dip"
        android:src="@drawable/animation_bg" />
    
    <TextView
        android:id="@+id/control1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:paddingTop="260px"
        android:text="@string/defense_monitor_open"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    <TextView
        android:id="@+id/control2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:paddingTop="245px"
        android:text="@string/defense_monitor_close1"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    <TextView
        android:id="@+id/control3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:paddingTop="270px"
        android:text="@string/defense_monitor_close2"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/pointer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="19dip"
        android:src="@drawable/animation_ct" />

    <TextView
        android:id="@+id/phone_state1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scan_back"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:paddingTop="45px"
        android:text="@string/first_use1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="?android:attr/textColorPrimary" />
    
    <TextView
        android:id="@+id/phone_state2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_state1"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="@string/first_use2"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="?android:attr/textColorSecondary" />

    <Button
        android:id="@+id/scan_start"
        android:layout_width="260px"
        android:layout_height="80px"
        android:layout_below="@id/phone_state2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:background="@drawable/bg_button"
        android:text="@string/scanner_title"
        android:textColor="#FFFFFF"
        android:textSize="24px" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="12px"
        android:src="@drawable/tencent"
        />

</RelativeLayout>