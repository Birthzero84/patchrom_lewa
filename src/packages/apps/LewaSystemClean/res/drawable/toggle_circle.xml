<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:drawable="@drawable/checkbox"
        android:top="@dimen/check_button_padding"
        android:left="@dimen/check_button_padding"
        android:right="@dimen/check_button_padding"
        android:bottom="@dimen/check_button_padding"/>
    <item>
        <selector>
            <item android:state_checked="true">
                <bitmap
                    android:gravity="center"
                    android:src="@drawable/net_enable" />
            </item>
            <item>
                <bitmap
                    android:gravity="center"
                    android:src="@drawable/net_disable" />
            </item>
        </selector>
    </item>

</layer-list>