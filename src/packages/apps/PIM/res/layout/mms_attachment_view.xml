<?xml version="1.0" encoding="utf-8"?>
<com.lewa.PIM.mms.ui.MmsAttachmentView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mms_attachment_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffe5e8ef"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="#ffcaced5"/>    

    <LinearLayout
	    android:id="@+id/mms_attachment_viewPager"
	    android:layout_width="fill_parent"	    
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:paddingBottom="10dip"
	    android:background="@null">
	
        <android.support.v4.view.ViewPager
	        android:id="@+id/attachment_viewPager"          
	        android:layout_width="wrap_content"
	        android:layout_height="@dimen/mms_attachment_viewPager_height" />
            
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	
	        <LinearLayout
	            android:id="@+id/attachment_viewGroup"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_alignParentBottom="true"
	            android:gravity="center_horizontal"
	            android:orientation="horizontal" >	            	                   
	        </LinearLayout>
	    </LinearLayout>	    
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/mms_smiley_tabs"
        android:layout_width="fill_parent"      
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@drawable/message_bg">   
        
        <android.support.v4.view.ViewPager
            android:id="@+id/lewa_smiley_viewPager"          
            android:layout_width="wrap_content"            
            android:layout_height="@dimen/mms_lewa_smiley_viewPager_height" 
            android:visibility="gone"/>
            
        <android.support.v4.view.ViewPager
            android:id="@+id/common_smiley_viewPager"          
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mms_common_smiley_viewPager_height" 
            android:visibility="gone"/>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dip"
            android:orientation="vertical" >
    
            <LinearLayout
                android:id="@+id/smiley_viewGroup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >                                     
            </LinearLayout>            
        </LinearLayout> 
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >
            
            <LinearLayout   android:id="@+id/common_smiley_tab"
	            android:layout_height="fill_parent"
	            android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center" 
                android:layout_marginBottom="0dip" 
	            android:orientation="vertical" > 
	            
                <TextView   android:id="@+id/common_smiley_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:layout_marginBottom="5dip"                    
                    android:singleLine="true"
                    android:gravity="center" 
                    android:text="@string/mms_common_smiley"
                    android:layout_marginRight="2dip"/>                	                      
            </LinearLayout>
             
            <LinearLayout   android:id="@+id/lewa_smiley_tab"
                android:layout_height="fill_parent"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center" 
                android:layout_marginBottom="0dip" 
                android:orientation="vertical" >
                
                <TextView   android:id="@+id/lewa_smiley_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:layout_marginBottom="5dip"                    
                    android:singleLine="true"
                    android:gravity="center" 
                    android:text="@string/mms_lewa_smiley"
                    android:layout_marginRight="2dip"/>
                
            </LinearLayout>
             
            <LinearLayout   android:id="@+id/char_smiley_tab"
                android:layout_height="fill_parent"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone" 
                android:orientation="vertical" >
                
                <TextView   android:id="@+id/char_smiley_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:gravity="center" 
                    android:text="@string/mms_char_smiley"
                    android:layout_marginRight="2dip"/>                
            </LinearLayout>                 
        </LinearLayout> 
    </LinearLayout>            
</com.lewa.PIM.mms.ui.MmsAttachmentView>