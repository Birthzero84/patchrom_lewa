<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="bottom|center_horizontal"
    android:background="@null" >

	<LinearLayout
	    android:id="@+id/call_sms_layout"
	    android:layout_width="match_parent"
	    android:layout_height="130dp"
	    android:orientation="vertical"
	    android:gravity="bottom|center_horizontal"
	    android:background="@drawable/sim_select_list_bg" >

		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:gravity="center_vertical" >

			<RelativeLayout
			    android:id="@+id/sim1_info"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center"
			    android:background="@drawable/sim_list_item1_bg" >
				
			  		<ImageView
			        	android:id="@+id/call_sms_icon1"
			        	android:layout_width="wrap_content"
			        	android:layout_height="wrap_content"
			            android:layout_marginLeft="36dp"
			            android:layout_centerVertical="true"
			            android:background="@drawable/icon_call" />
			        
			    	<TextView
			        	android:id="@+id/sim_name1"
			        	android:layout_width="wrap_content"
			        	android:layout_height="wrap_content"
						android:ellipsize="end"
						android:maxEms="4"
			            android:maxWidth="64dp"
						android:singleLine="true"
			        	android:layout_centerInParent="true"
			        	android:textAppearance="?android:attr/textAppearanceMedium"
			        	android:text="@string/gemini_3g_indic"
			        	android:textColor="@android:color/white"
			        	android:includeFontPadding="false"/>
		   	 </RelativeLayout>
	   	 </LinearLayout>

		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:gravity="center_vertical" >

			<RelativeLayout
			    android:id="@+id/sim2_info"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center"
			    android:background="@drawable/sim_list_item2_bg" >
				
			  		<ImageView
			        	android:id="@+id/call_sms_icon2"
			        	android:layout_width="wrap_content"
			        	android:layout_height="wrap_content"
			            android:layout_marginLeft="36dp"
			            android:layout_centerVertical="true"
			            android:background="@drawable/icon_call" />
			        
			    	<TextView
			        	android:id="@+id/sim_name2"
			        	android:layout_width="wrap_content"
			        	android:layout_height="wrap_content"
						android:ellipsize="end"
						android:maxEms="4"
			            android:maxWidth="64dp"
						android:singleLine="true"
			        	android:layout_centerInParent="true"
			        	android:textAppearance="?android:attr/textAppearanceMedium"
			        	android:text="@string/gemini_3g_indic"
			        	android:textColor="@android:color/white"
			        	android:includeFontPadding="false"/>
		   	 </RelativeLayout>
	   	 </LinearLayout>
   	 </LinearLayout>
   	 
</LinearLayout>
