<com.lewa.PIM.mms.ui.ImageAttachmentView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/image_attachment_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingRight="5dip"
    android:background="@drawable/attachment_editor_bg">
    
	<RelativeLayout 
	    android:layout_height="wrap_content" 					
		android:layout_width="0dip"
		android:layout_marginTop="12dip"
		android:layout_marginBottom="12dip"
		android:layout_weight="1.0">
		
		<ImageView
			android:id="@+id/image_content"
			android:layout_width="fill_parent"
			android:layout_height="135dip"
			android:layout_weight="1" />

		<ImageView
			android:id="@+id/drm_lock"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="3dip" 
			android:paddingTop="3dip" 
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true" />
		 
		<TextView android:id="@+id/media_size_info"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"				
			android:background="#88000000"
			android:textColor="#ffffffff"
			android:textSize="11sp" 
			android:textStyle="bold"
			android:paddingLeft="3dip" 
			android:paddingRight="3dip"  
			android:layout_alignParentRight="true"
			android:layout_marginRight="5dip" />
	</RelativeLayout>

    <LinearLayout
        android:layout_width="0.5dip"
        android:layout_height="match_parent"
        android:background="?android:attr/dividerHorizontal" />
	    	    
    <LinearLayout
        android:orientation="vertical"
        android:paddingRight="3dip"        
        android:layout_width="wrap_content"
        android:layout_height="159dip">

        <LinearLayout
            android:id="@+id/view_image_button"
            android:layout_width="100dip"
            android:layout_height="0dip"
            android:layout_weight="1.0"
            android:background="@drawable/mms_attachment_selector_1"            
            android:gravity="center_horizontal">
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:text="@string/view"
                android:textColor="#ff38445c"   
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"/>  
                    
        </LinearLayout>
        
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0.5dip"
	        android:background="?android:attr/dividerHorizontal" />
                  
        <LinearLayout
            android:id="@+id/replace_image_button"
            android:layout_width="100dip"
            android:layout_height="0dip"
            android:layout_weight="1.0"
            android:background="@drawable/mms_attachment_selector_2"            
            android:gravity="center_horizontal" >
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:text="@string/replace"
                android:textColor="#ff38445c"   
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"/>              
        </LinearLayout>
        
            
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="?android:attr/dividerHorizontal" />
            
        <LinearLayout
            android:id="@+id/remove_image_button"
            android:layout_width="100dip"
            android:layout_height="0dip"
            android:layout_weight="1.0"
            android:background="@drawable/mms_attachment_selector_3"            
            android:gravity="center_horizontal" >
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:text="@string/remove"
                android:textColor="#ff38445c"   
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"/>              
        </LinearLayout>        
    </LinearLayout>
</com.lewa.PIM.mms.ui.ImageAttachmentView>
