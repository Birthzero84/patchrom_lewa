<com.lewa.PIM.contacts.editor.ContactsSavedPositionView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:focusable="false"
        android:visibility="gone">
        <TextView
            style="@style/ContactListSeparatorTextViewStyle"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:text="@string/contact_store_pos"/>
    </FrameLayout>
<!--     <Button
        android:id="@+id/position_list"
        style="@lewa:style/V5spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/editor_field_left_padding"
        android:layout_marginRight="@dimen/editor_field_left_padding"
        android:focusable="true"
        android:gravity="left|center_vertical"
        android:minHeight="@dimen/editor_min_line_item_height"
        android:paddingLeft="12dip"
        android:textAppearance="?android:attr/textAppearanceMedium" /> -->

    <LinearLayout 
       style="@lewa:style/V5spinner" 
       android:id="@+id/position_list"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:minHeight="@dimen/editor_min_line_item_height"
       android:layout_marginLeft="@dimen/editor_field_left_padding"
       android:layout_marginRight="@dimen/editor_field_left_padding"
       android:focusable="true"
       android:paddingLeft="12dip"
       android:orientation="horizontal"
       android:background="@drawable/account_position_bg" 
       >
       <TextView
           android:id="@+id/account_position"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textAppearance="?android:attr/textAppearanceMedium"
           android:gravity="left|center_vertical"
           />
    </LinearLayout>
    
    <FrameLayout
        android:id="@+id/positionChangeWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:focusable="false">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:text="@string/position_change_warning"/>
    </FrameLayout>

</com.lewa.PIM.contacts.editor.ContactsSavedPositionView>
