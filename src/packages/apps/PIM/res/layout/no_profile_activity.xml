<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/contact_detail_head_height" >
	    <ImageView 
	        android:id="@+id/sticker_photo"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:scaleType="centerCrop" />

        <FrameLayout 
            android:layout_width="@dimen/photo_width_height"
            android:layout_height="@dimen/photo_width_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dip"
            android:layout_marginBottom="42dip">
            <ImageView 
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />            
        </FrameLayout>        
    </RelativeLayout>
    
    <TextView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="50dip"
         android:gravity="center"
         android:layout_gravity="center_horizontal"
         android:textSize="20sp"
         android:text="@string/prompt_no_profile_data"/>
    <Button
         android:id="@+id/btn_edit_my_card"
         android:text="@string/edit_my_card"
         android:layout_width="200dip"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:gravity="center"
         android:layout_marginTop="22dip"/>
    <Button
         android:id="@+id/btn_login_lewa_account"
         android:text="@string/login_lewa_account"
         android:layout_width="200dip"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:gravity="center"
         android:layout_marginTop="22dip"
         android:visibility="gone"/>
</LinearLayout>