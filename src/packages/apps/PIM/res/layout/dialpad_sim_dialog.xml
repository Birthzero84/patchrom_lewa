<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    
    <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="10dip"
        android:paddingRight="20dip"
        android:paddingLeft="20dip"
	    android:gravity="center_horizontal">
	    
	    <TextView
	        android:id="@+id/dialpad_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:textAppearance="?android:attr/textAppearanceMediumInverse"
	        android:gravity="center_vertical"
	        android:singleLine="true"
	        android:ellipsize="end"
	        android:textColor="#ffa6aab3"
	        android:layout_gravity="center_vertical"/>    
    </LinearLayout>
    
	<LinearLayout
	    android:id="@+id/dialpad_button_layout"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:paddingRight="20dip"
	    android:paddingLeft="20dip"
	    android:paddingTop="10dip"
	    android:paddingBottom="20dip">
	    
	    <LinearLayout
	        android:id="@+id/dialpad_button_card1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center_horizontal"
	        android:background="@drawable/dialpad_sim_btn_selector" >
	       
	       <ImageView
	           android:id="@+id/dialpad_button_icon_text1"
	           android:src="@drawable/icon_call_sim1"
	           android:layout_width="wrap_content"
	           android:layout_height="45dip"/>               
	        
	        <TextView
	            android:id="@+id/dialpad_button_text1"
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	            android:includeFontPadding="false" 
	            android:singleLine="true"
	            android:gravity="center_vertical"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="6dp"
	            android:textSize="12sp"
	            android:textColor="#ffffffff"
	            android:ellipsize="end"/>
	     </LinearLayout>
	
	    <LinearLayout
	        android:id="@+id/dialpad_button_card2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="12dip"
	        android:layout_weight="1"
	        android:gravity="center_horizontal"
	        android:background="@drawable/dialpad_sim_btn_selector" >
	        
	       <ImageView
	           android:id="@+id/dialpad_button_icon_text2"
	           android:src="@drawable/icon_call_sim2"
	           android:layout_width="wrap_content"
	           android:layout_height="45dip"/>               
	                        
	        <TextView
	            android:id="@+id/dialpad_button_text2"
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	            android:includeFontPadding="false" 
	            android:layout_marginLeft="6dp"
	            android:singleLine="true"
	            android:textColor="#ffffffff"
	            android:layout_gravity="center_vertical"
	            android:gravity="center_vertical"
	            android:textSize="12sp"
	            android:ellipsize="end"/>
	     </LinearLayout>                                        
	</LinearLayout> 
</LinearLayout>
