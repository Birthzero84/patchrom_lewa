<?xml version="1.0" encoding="utf-8"?>
<com.lewa.PIM.common.indexbar.IndexBar xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" 
	android:layout_height="match_parent"
	android:id="@+id/indexbar_shadow">
    
	<RelativeLayout 
	    android:id="@+id/menu" 
		android:layout_height="345dip" 
		android:layout_width="fill_parent"
		android:layout_alignParentBottom="true" 
		android:background="@color/alphafast_bg" >

        <com.lewa.PIM.common.indexbar.Scroller_view
            android:id="@+id/scroller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </com.lewa.PIM.common.indexbar.Scroller_view>
        
        <RelativeLayout
             android:id="@+id/scrollbar"
             android:layout_width="4dip"
             android:layout_height="40dip"
             android:layout_alignParentRight="true">
	        <View 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="2dip"
	            android:background="@color/names_scroll_bar_color" />
       </RelativeLayout>     
        
		<ImageButton android:id="@+id/left" android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			 android:layout_alignParentLeft="true" android:layout_centerVertical="true"
			 android:visibility="gone"></ImageButton>
		
		<ImageButton android:id="@+id/right" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:visibility="gone"></ImageButton>

	</RelativeLayout>
</com.lewa.PIM.common.indexbar.IndexBar>  
