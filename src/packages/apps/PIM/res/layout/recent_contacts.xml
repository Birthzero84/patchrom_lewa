<?xml version="1.0" encoding="utf-8"?>

<com.lewa.PIM.mms.ui.RecentContacts
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/recipient_contacts"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@null">
	 
	<LinearLayout android:id="@+id/recipient_first"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:orientation="horizontal" 
		android:layout_marginTop="12dip"
		android:layout_marginBottom="5dip"	
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"    
		android:gravity="center_vertical">

		<LinearLayout android:id="@+id/recipient_first_1_layout"
            android:layout_width="0.0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
            android:background="@drawable/recent_contacts_selector" 
            android:paddingLeft="4dip"
            android:paddingRight="4dip"
			android:gravity="center_horizontal">
			
			<TextView android:id="@+id/recipient_first_1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="12sp"
				android:singleLine="true"
				android:ellipsize="end"
				android:textColor="#ff38445c"	
				android:gravity="center_vertical"
                android:layout_gravity="center_vertical"/>				
		</LinearLayout>
							
		<LinearLayout android:id="@+id/recipient_first_2_layout"
            android:layout_width="0.0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:layout_marginLeft="5dip"
            android:paddingLeft="4dip"
            android:paddingRight="4dip"
            android:background="@drawable/recent_contacts_selector" 
			android:gravity="center_horizontal">

			<TextView android:id="@+id/recipient_first_2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
                android:textSize="12sp"
				android:singleLine="true"
				android:ellipsize="end"
				android:textColor="#ff38445c"	
				android:gravity="center_vertical"
                android:layout_gravity="center_vertical"/>
				
		</LinearLayout>		
					
		<LinearLayout android:id="@+id/recipient_first_3_layout"
            android:layout_width="0.0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:layout_marginLeft="5dip"
            android:paddingLeft="4dip"
            android:paddingRight="4dip"
            android:background="@drawable/recent_contacts_selector" 
			android:gravity="center_horizontal">

			<TextView android:id="@+id/recipient_first_3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
                android:textSize="12sp"
				android:singleLine="true"
				android:ellipsize="end"
				android:textColor="#ff38445c"	
				android:gravity="center_vertical"
                android:layout_gravity="center_vertical"/>								
		</LinearLayout>	
		    				
	</LinearLayout>
	
	<LinearLayout android:id="@+id/recipient_second"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:orientation="horizontal" 
		android:layout_marginTop="0dip"
		android:layout_marginBottom="12dip"
		android:layout_marginLeft="6dip"
		android:layout_marginRight="6dip"		
		android:gravity="center_vertical">
		
		<LinearLayout android:id="@+id/recipient_second_1_layout"
            android:layout_width="0.0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
            android:paddingLeft="4dip"
            android:paddingRight="4dip"
            android:background="@drawable/recent_contacts_selector" 
			android:gravity="center_horizontal">

			<TextView android:id="@+id/recipient_second_1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="12sp"
				android:singleLine="true"
				android:ellipsize="end"
				android:textColor="#ff38445c"	
				android:gravity="center_vertical"
                android:layout_gravity="center_vertical"/>
								
		</LinearLayout>		
					
		<LinearLayout android:id="@+id/recipient_second_2_layout"
            android:layout_width="0.0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:layout_marginLeft="5dip"
            android:paddingLeft="4dip"
            android:paddingRight="4dip"
            android:background="@drawable/recent_contacts_selector" 
			android:gravity="center_horizontal">

			<TextView android:id="@+id/recipient_second_2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
                android:textSize="12sp"
				android:singleLine="true"
				android:ellipsize="end"
				android:textColor="#ff38445c"	
				android:gravity="center_vertical"
                android:layout_gravity="center_vertical"/>
				
		</LinearLayout>		
			
		<LinearLayout android:id="@+id/recipient_second_3_layout"
            android:layout_width="0.0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:layout_marginLeft="5dip"
            android:background="@drawable/recent_contacts_selector" 
            android:paddingLeft="4dip"
            android:paddingRight="4dip"
			android:gravity="center_horizontal">

			<TextView android:id="@+id/recipient_second_3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
                android:textSize="12sp"
				android:singleLine="true"
				android:ellipsize="end"
				android:textColor="#ff38445c"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"/>
				
		</LinearLayout>		 					
	</LinearLayout>
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="?android:attr/dividerHorizontal" />   	    			
</com.lewa.PIM.mms.ui.RecentContacts>