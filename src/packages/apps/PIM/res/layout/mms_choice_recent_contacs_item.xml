<?xml version="1.0" encoding="utf-8"?>
<com.lewa.PIM.mms.choiceContacts.MmsChoiceRecentContactsItem
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:background="@null" 
	android:orientation="vertical">
	
    <RelativeLayout android:id="@+id/body_layout"
        android:layout_width="fill_parent"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"         
        android:layout_height="wrap_content">
         
        <CheckBox 
            android:id="@+id/select_box"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"            
            android:focusable="false"
            android:clickable="false" />
        
	   	<LinearLayout
			android:layout_width="fill_parent" 
			android:layout_height="@dimen/sms_calllog_list_item_height"
			android:background="@null" 
			android:layout_toLeftOf="@+id/select_box"
			android:orientation="horizontal">
		
			<ImageView android:id="@+id/contact_item_photo"
				android:layout_centerVertical="true"
				android:layout_width="@dimen/call_log_list_contact_photo_size"
				android:layout_height="@dimen/call_log_list_contact_photo_size"/>	
		 
			<LinearLayout android:id="@+id/contact_name_layout"
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:layout_marginLeft="10dip"			
				android:background="@null" 
				android:gravity="center_vertical"
				android:orientation="vertical">
				
				<TextView android:id="@+id/contact_name" 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:ellipsize="end"
					android:singleLine="true"
	                android:layout_marginLeft="10dip"
	                android:gravity="center_vertical"
					android:textAppearance="?android:attr/textAppearanceMedium"/>
				
	            <LinearLayout android:id="@+id/contact_yl_number_layout"
	                android:layout_width="wrap_content" 
	                android:layout_height="wrap_content"
	                android:background="@null" 
	                android:layout_marginLeft="10dip"
	                android:gravity="center_vertical"
	                android:orientation="horizontal">			
				
				    <ImageView android:id="@+id/contact_yl_number_state"
	                    android:layout_width="wrap_content"
	                    android:layout_height="fill_parent"
	                    android:background="@drawable/icon_contact_header_offline" 
	                    android:visibility="gone"
	                    android:layout_marginRight="4dip"
	                    android:layout_marginTop="5dip"
	                    android:layout_marginBottom="4dip"
	                    android:gravity="center"
	                    android:layout_gravity="center"/>
				             
					<TextView android:id="@+id/contact_number" 
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" 
						android:ellipsize="end"
						android:singleLine="true"
		                android:gravity="center_vertical"
						android:textAppearance="?android:attr/textAppearanceSmall"/>
				</LinearLayout>
				
	            <TextView android:id="@+id/contact_type" 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" 
	                android:singleLine="true"
	                android:layout_marginLeft="10dip"
	                android:gravity="center_vertical"
	                android:textSize="12dip"/>									
			</LinearLayout>	
		</LinearLayout>
	</RelativeLayout>
	
   	<LinearLayout
	    android:id="@+id/img_log_separator"
	    android:layout_width="match_parent"
	    android:layout_height="0.5dip"
	    android:background="#ffd5d5d5" /> 	   	    
</com.lewa.PIM.mms.choiceContacts.MmsChoiceRecentContactsItem>
