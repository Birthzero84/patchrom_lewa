<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Text.Small" parent="@android:style/TextAppearance.Small">
    </style>
     <style name="Text.Small.White" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="Text.Small.Black" parent="Text.Small">
        <item name="android:textColor">@color/color_black</item>
    </style>
    <style name="Text.Small.Gray" parent="Text.Small">
        <item name="android:textColor">@color/color_gray</item>
    </style>
    <style name="Text.Medium" parent="@android:style/TextAppearance.Medium"></style>
    <style name="Text.Medium.Black" parent="Text.Medium">
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="Text.Large" parent="@android:style/TextAppearance.Large"></style>
    
    <style name="Text.Large.Black" parent="Text.Large">
        <item name="android:textColor">@color/color_black</item>
    </style>
    
    <style name="divider">
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_divider</item>
    </style>
</resources>