<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/category_item_width"
    android:layout_height="@dimen/category_item_height"
    android:minHeight="@dimen/category_item_height" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/white_selector"
        android:paddingBottom="@dimen/category_item_padding_bottom"
        android:paddingTop="@dimen/category_item_padding_top" >

        <ImageView
            android:id="@+id/app_grid_item_app_icon"
            android:layout_width="@dimen/category_item_width"
            android:layout_height="@dimen/app_grid_item_icon_height"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/image_content"
            android:src="@drawable/default_icon" />

        <ImageView
            android:id="@+id/app_grid_item_app_frame"
            android:layout_width="@dimen/app_grid_item_icon_width"
            android:layout_height="@dimen/app_grid_item_icon_height"
            android:layout_alignLeft="@+id/app_grid_item_app_icon"
            android:layout_alignTop="@+id/app_grid_item_app_icon"
            android:contentDescription="@string/image_content"
            android:src="@drawable/white_mask"
            android:visibility="gone" />

        <TextView
            android:id="@+id/app_grid_item_app_name"
            style="@style/category_item_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_grid_item_app_icon"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>