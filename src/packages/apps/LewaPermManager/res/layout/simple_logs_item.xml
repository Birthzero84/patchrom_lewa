<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/simple_logs_item_padding"
    android:paddingRight="@dimen/simple_logs_item_padding"
    android:layout_height="@dimen/list_height" >
	
	<RelativeLayout
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
	    <TextView
	        android:id="@+id/textTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        style="@style/Text.Medium.Black"/>
	    
	 	 <TextView
	        android:id="@+id/textTitleSub"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_below="@id/textTitle"
			style="@style/Text.Small.Gray"/>
 	 </RelativeLayout>

	<RelativeLayout
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
    	android:layout_centerVertical="true"
    	android:layout_marginRight="@dimen/item_margin">
	    <TextView
	        android:id="@+id/textTime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_alignParentRight="true"
	        style="@style/Text.Medium.Gray"/>
	    
	 	 <TextView
	        android:id="@+id/textPermited"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_below="@id/textTime"
			android:layout_alignParentRight="true"
			style="@style/Text.Small.Gray"/>
 	 </RelativeLayout>

</RelativeLayout>