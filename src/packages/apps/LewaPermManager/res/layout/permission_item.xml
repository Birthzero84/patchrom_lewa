<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_height"
    android:paddingLeft="@dimen/item_padding_side"
    android:paddingRight="@dimen/item_padding_side">
	
    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"/>
    
	<RelativeLayout
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon"
        android:layout_centerVertical="true">
	    <TextView
	        android:id="@+id/textTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        style="@style/Text.Medium.Black"/>
	    
	 	 <TextView
	        android:id="@+id/textTitleSub"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_below="@id/textTitle"
			style="@style/Text.Small.Gray"/>
 	 </RelativeLayout>

	 <ImageView
        android:id="@+id/icon_next"
        android:layout_alignParentRight="true"
        android:src="@lewa:drawable/setting_icon_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>
</RelativeLayout>