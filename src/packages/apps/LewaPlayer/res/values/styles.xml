<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@color/dialog_bg</item>
    </style>
    <style name="ID3Dialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@color/id3_bg</item>
        <item name="android:textColor">@color/id3_title_color</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
    </style>

    <style name="DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/WindowTitle</item>
    </style>
    <style name="WindowTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="MainTextViewStyle">
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <style name="MainTextViewStyle.Shadow">
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="MusicActionBarStyle" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
    </style>
    <style name="IntroText">
        <item name="android:textColor">#97ffffff</item>
        <item name="android:textSize">16dp</item>
    </style>  
    <style name="Widget.Music.PagerHeader" parent="@lewa:style/Widget.PagerHeader">
        <item name="lewa:activeTextColor">#ffffffff</item>
        <item name="lewa:inactiveTextColor">#ff777777</item>
        <item name="lewa:showTopShadow">false</item>
        <item name="lewa:showBottomBar">false</item>
        <item name="lewa:showTab">false</item>
    </style>
        
</resources>
