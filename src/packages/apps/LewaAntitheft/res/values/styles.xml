<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Theme" parent="@lewa:style/V5.Theme" >
    </style>
    
   	<style name="Text.Large" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/color_gray</item>
    </style>
    
    <style name="Text.Medium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/color_gray</item>
    </style>
    
    <style name="Text.Medium.Blue" parent="Text.Medium">
        <item name="android:textColor">@color/color_blue</item>
    </style>
    

    
    <style name="Text.Medium.Gray" parent="Text.Medium">
        <item name="android:textColor">@color/color_gray</item>
    </style>
       
    <style name="Text.Medium.Black" parent="Text.Medium">
        <item name="android:textColor">@color/color_black</item>
    </style>
	
	<style name="Text.Small" parent="@android:style/TextAppearance.Small">
    </style>
    
    <style name="Text.Small.Blue" parent="Text.Small">
        <item name="android:textColor">@color/color_blue</item>
    </style>
    
    <style name="Text.Small.Black" parent="Text.Small">
        <item name="android:textColor">@color/color_black</item>
    </style>
    
    <style name="Text.Small.Gray" parent="Text.Small">
        <item name="android:textColor">@color/color_gray</item>
    </style>
    
    <style name="Text.Small.Black.Command" parent="Text.Small.Black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/item_margin</item>
        <item name="android:paddingTop">@dimen/item_margin</item>
    </style>
    
   <style name="Text.Small.Blue.Command" parent="Text.Small.Blue">
        <item name="android:paddingBottom">@dimen/item_margin</item>
        <item name="android:paddingTop">@dimen/item_margin</item>
   </style>
    
    <style name="Text.Small.Gray.ContactName" parent="Text.Small.Gray">
        <item name="android:layout_width">60dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">right</item>
    </style>
    
    
    
    <style name="Text.Small.Red" parent="Text.Small">
        <item name="android:textColor">@color/color_red</item>
    </style>
        
    
    <style name="Edit">
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="Edit.Phone">
        <item name="android:inputType">phone</item>
    </style>
    
    <style name="Edit.Password">
        <item name="android:textColor">@color/color_blue</item>
    </style>
    
   <style name="Button">
   </style> 
    
   <style name="Button.Blue" parent="Button" >
    	<item name="android:layout_gravity">center</item>  	
    	<item name="android:background">@drawable/blue_button</item>
    	<item name="android:textColor">@android:color/white</item>
    	<item name="android:layout_height">@dimen/blue_button_height</item>
    </style>
    
   <style name="Button.Blue.One" parent="Button.Blue" >      
    	<item name="android:layout_width">@dimen/blue_button_width</item>  
    	<item name="android:layout_centerHorizontal">true</item> 
    </style>
    
    
    <style name="Button.Blue.Half" parent="Button.Blue" >
    	<item name="android:layout_width">@dimen/blue_button_width_half</item>  
    </style>
    
    <style name="Button.Big" parent="@android:style/Widget.Holo.Light.Button" >
        <item name="android:layout_height">@dimen/button_big_dimen</item>
    	<item name="android:layout_width">@dimen/button_big_dimen</item>  
    	<item name="android:layout_margin">@dimen/item_margin_small</item>  	
    	<item name="android:layout_gravity">center</item>  	
    </style>
    
    <style name="divider">
		<item name="android:layout_height">@dimen/divider_height</item>
    	<item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_blue</item>
    </style>
    
    <style name="divider.main" parent="divider">
		<item name="android:background">@drawable/bg_blue</item>
    </style>
    
    <style name="CheckText" parent="Text.Medium.Black">
		<item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/item_margin</item>
        <item name="android:layout_marginRight">@dimen/item_margin_big</item>
    </style>
    
    <style name="CheckBox">
		<item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/item_margin_big</item>
        <item name="android:padding">0dp</item>
    </style>
    
    <style name="Password">
        <item name="android:password">true</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:digits">@string/password_digits</item>
    </style>
</resources>
