<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:background="@android:color/holo_blue_light"
	android:padding="2dp">

    <com.lewa.themechooser.widget.ImageViewCheck
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/thumbnail_deskwallpaper_width"
        android:layout_height="@dimen/thumbnail_deskwallpaper_height"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:textColor="#FFFFFF"
        android:background="@drawable/text_view"
         android:paddingLeft="6dip"
         />

    <com.lewa.themechooser.widget.LewaImageView
        android:id="@+id/check_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_view_selected"
        android:layout_gravity="top|right"
        android:layout_margin="2dp"
        android:visibility="gone"/>

</FrameLayout>
