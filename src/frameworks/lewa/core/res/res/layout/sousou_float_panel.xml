<?xml version="1.0" encoding="utf-8"?>
<!--
This is layout for the float panel of text view insertion.
-->
<lewa.os.FloatPanelView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/panel"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/textview_panel_bg">

        <TextView android:id="@+id/buttonCopy"
            style="@style/TextViewFloatPanelButton"
            android:text="@android:string/copy"
            />
        <ImageView android:id="@+id/separator1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/textview_panel_separator"/>
        <TextView android:id="@+id/buttonSearch"
            style="@style/TextViewFloatPanelButton"
            android:text="@android:string/search_go"
            />
        <ImageView android:id="@+id/separator2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/textview_panel_separator"/>
        <TextView android:id="@+id/buttonTranslate"
            style="@style/TextViewFloatPanelButton"
            android:text="@string/translate"
            />
        <ImageView android:id="@+id/separator3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/textview_panel_separator"
            android:visibility="gone" />
        <TextView android:id="@+id/buttonAddContact"
            style="@style/TextViewFloatPanelButton"
            android:text="@string/add"
            android:visibility="gone"
            />
         <ImageView android:id="@+id/separator4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/textview_panel_separator"
            android:visibility="gone" />
        <TextView android:id="@+id/buttonCall"
            style="@style/TextViewFloatPanelButton"
            android:text="@string/call"
            android:visibility="gone"
            />
        
        <ImageView android:id="@+id/separator5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/textview_panel_separator"
            android:visibility="gone" />
        <TextView android:id="@+id/buttonSMS"
            style="@style/TextViewFloatPanelButton"
            android:text="@string/sms"
            android:visibility="gone"
            />
        <ImageView android:id="@+id/separator6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/textview_panel_separator"
            android:visibility="gone" />
        <TextView android:id="@+id/buttonMail"
            style="@style/TextViewFloatPanelButton"
            android:text="@string/mail"
            android:visibility="gone"
            />
    </LinearLayout>
    <ImageView android:id="@+id/arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/textview_panel_arrow_up"
        android:visibility="gone" />
    <ImageView android:id="@+id/arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/textview_panel_arrow_down"
        android:visibility="gone" />
</lewa.os.FloatPanelView>
